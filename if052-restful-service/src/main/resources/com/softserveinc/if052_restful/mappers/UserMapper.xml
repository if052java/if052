<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.softserveinc.if052_restful.mappers.UserMapper">

    <!-- 
        Result map for representation user
    -->
    <resultMap type="User" id="UserResult">
        <id property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="surname" column="surname"/>
        <result property="middleName" column="middle_name"/>
        <result property="login" column="login"/>
        <result property="password" column="password"/>
        <collection property="addresses" column="userId" javaType="ArrayList" ofType="Address"
                         resultMap="com.softserveinc.if052_restful.mappers.AddressMapper.AddressSimpleResult">
        </collection>
    </resultMap>

    <resultMap id="UserSimpleResult" type="User">
        <id property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="surname" column="surname"/>
        <result property="middleName" column="middle_name"/>
    </resultMap>


    <select id="getUserById" parameterType="int" resultMap="UserResult">
        SELECT
        u.user_id,
        u.name,
        u.surname,
        u.middle_name,
        u.login,
        u.password,
        a.city,
        a.street,
        a.building,
        a.apartment,
        a.tariff,
        a.user_id
        FROM user u LEFT OUTER JOIN address a ON u.user_id = a.user_id
        WHERE u.user_id = #{userId}
    </select>

    <select id="getAllUsers" resultMap="UserResult">
        SELECT * FROM user
    </select>

    <insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO user(name, surname, middle_name, login, password)
        VALUES( #{name}, #{surname}, #{middleName}, #{login}, #{password})
    </insert>

    <update id="updateUser" parameterType="User">
        UPDATE user
        SET
        name = #{name},
        surname = #{surname},
        middle_name = #{middleName},
        login = #{login},
        password = #{password}
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM user WHERE user_id = #{userId}
    </delete>

</mapper>
